<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
		targetNamespace="urn:X-quest.com:glue/config/1.0"
        xmlns:config="urn:X-quest.com:glue/config/1.0"
		xmlns:common="urn:X-quest.com:glue/common/1.1"
		elementFormDefault="qualified">

    <!-- Include Agent Config Common types -->
    <xsd:import namespace="urn:X-quest.com:glue/common/1.1" schemaLocation="common.1.1.xsd"/>

    <xsd:element name="glue-configuration">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="host-id" type="config:HostId" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="host-display-name" type="config:HostName" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="secure-launcher" type="config:SecureLauncher" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="http-upstreams" type="config:HttpUpstreams" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="http-downstreams" type="config:HttpDownstreams" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="polling" type="config:Polling" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="queue-sizes" type="config:QueueSizes" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:simpleType name="Documentation">
        <xsd:restriction base="xsd:string">
            <xsd:whiteSpace value="preserve"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:complexType name="HostId">
        <xsd:sequence>
            <xsd:element name="documentation" type="config:Documentation"/>
            <xsd:element name="id" type="common:UUID" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="HostName">
        <xsd:sequence>
            <xsd:element name="documentation" type="config:Documentation"/>
            <xsd:element name="name" type="xsd:string" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="SecureLauncher">
        <xsd:sequence>
            <xsd:element name="documentation" type="config:Documentation"/>
            <xsd:element name="path" type="xsd:string" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="HttpUpstreams">
        <xsd:sequence>
            <xsd:element name="documentation" type="config:Documentation"/>
            <xsd:element name="http-upstream" type="config:HttpUpstream" minOccurs="0"
                         maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="HttpUpstream">
        <xsd:attribute name="url" type="xsd:anyURI" use="required"/>
        <xsd:attribute name="address" type="xsd:string"/>
        <xsd:attribute name="proxy" type="xsd:anyURI"/>
        <xsd:attribute name="proxy-user" type="xsd:string"/>
        <xsd:attribute name="proxy-ntlm-domain" type="xsd:string"/>
        <xsd:attribute name="proxy-pass" type="xsd:string"/>
        <xsd:attribute name="ssl-allow-self-signed" type="xsd:boolean" default="true"/>
        <xsd:attribute name="ssl-cert-common-name" type="xsd:string"/>
    </xsd:complexType>

    <xsd:complexType name="HttpDownstreams">
        <xsd:sequence>
            <xsd:element name="documentation" type="config:Documentation"/>
            <xsd:element name="http-downstream" type="config:HttpDownstream" minOccurs="0"
                         maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="HttpDownstream">
        <xsd:attribute name="port" type="xsd:unsignedShort" use="required"/>
        <xsd:attribute name="address" type="xsd:string"/>
    </xsd:complexType>

    <xsd:complexType name="Polling">
        <xsd:sequence>
        	<xsd:element name="documentation"
        		type="config:Documentation" />
        	<xsd:element name="initial" type="xsd:double" minOccurs="1"
        		maxOccurs="1" />
        	<xsd:element name="growth-rate" type="xsd:double"
        		minOccurs="1" maxOccurs="1" />
        	<xsd:element name="max-delay-factor" type="xsd:double"
        		minOccurs="1" maxOccurs="1" />
        	<xsd:element name="upstream-offset" type="xsd:double" maxOccurs="1" minOccurs="1"></xsd:element>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="QueueSizes">
        <xsd:sequence>
            <xsd:element name="documentation" type="config:Documentation"/>
            <xsd:element name="upstream" type="config:Queue" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="downstream" type="config:Queue" minOccurs="1" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="Queue">
        <xsd:attribute name="max-queue-size" type="xsd:integer" use="required"/>
        <xsd:attribute name="max-disk-space" type="xsd:integer" use="required"/>
        <xsd:attribute name="max-batch-size" type="xsd:integer" use="required"/>
    </xsd:complexType>

    <xsd:simpleType name="MemoryThreshold">
        <xsd:restriction base="xsd:double">
            <xsd:maxInclusive value="1.0"/>
            <xsd:minInclusive value="0.0"/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>
