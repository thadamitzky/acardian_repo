<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="urn:X-quest.com:glue/hostkeys/1.0"
            xmlns:hostkeys="urn:X-quest.com:glue/hostkeys/1.0"
            elementFormDefault="unqualified">

    <!-- Top level element, required for JAXB to unmarshal file's using the schema -->
    <xsd:element name="host-key-config">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="host-key" type="hostkeys:HostKey" minOccurs="0" maxOccurs="unbounded"/>
            </xsd:sequence>
            <xsd:attribute name="accept-new" type="xsd:boolean" default="true" use="optional"/>
            <xsd:attribute name="accept-changed" type="xsd:boolean" default="true" use="optional"/> 
        </xsd:complexType>
    </xsd:element>

    <xsd:complexType name="HostKey">
        <xsd:simpleContent>
            <xsd:extension base="xsd:string">
                <xsd:attribute name="host" type="xsd:string" use="required"/>
                <xsd:attribute name="type" type="xsd:string" use="required"/>                               
            </xsd:extension>
        </xsd:simpleContent>
    </xsd:complexType>
</xsd:schema>
