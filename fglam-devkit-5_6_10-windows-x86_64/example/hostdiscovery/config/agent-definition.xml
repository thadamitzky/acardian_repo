<agent-definition xmlns="urn:X-quest.com:glue/agent/definition/1.9.1"
                  name="HostDiscoveryAgent" allow-asynchronous-access="true"
                  ver="5.6.10">

    <!-- A pointer to where the topology definition files are. Topology files are loaded in
         the order they are defined in this file, so later definitions can
         refer to earlier definitions. -->
    <topology-types package="com.quest.fglam.example.hostdiscovery.samples">
        <topology-file filename="hostdiscovery-topology.xml"/>
    </topology-types>

    <agent name="HostDiscovery" package="com.quest.fglam.example.hostdiscovery" class-name="HostDiscoveryImpl">

        <!-- once in a blue moon scan the entire subnet -->
        <data-collection enable-cron="true">
            <collector name="scan" method-name="scanNow" value="12" unit="hours"/>
        </data-collection>

        <properties>
            <group id="Properties">
                <boolean id="local" default="true" label="Scan Local Subnet"/>
                <boolean id="osinfo" default="true" label="Guess OS Information"/>
                <integer id="timeout" default="15" label="Ping Timeout (seconds)"/>
                <secondary id="subnets" size="Unlimited" label="Subnets">
                    <cols>
                        <string id="address" label="Address" size="Unlimited"/>
                        <string id="mask" label="Net Mask" size="Unlimited"/>
                    </cols>
                </secondary>
            </group>
        </properties>

        <!-- invoke an immediate scan -->
        <callback name="scanNow"/>
    </agent>

</agent-definition>
